<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles/styles.css">
    <script src="index.js"></script>
    <title>Users</title>
</head>
<body>
    <h1>Users</h1>
<table>
<tr class ="x">
    <th class="id">id</th>
    <th class="name">Name</th>
    <th class="email">Email</th>
    <th class="age">Age</th>
    <th>Action</th>
</tr>
<% users.forEach(function(user){ %>
<tr>
    <td class="id"><%= user.id %></td>
    <td class="name"><%= user.name %></td>
    <td class="email"><%= user.email %></td>
    <td class="age"><%= user.age %></td>
    <td>
        <a href="/api/users/updateUser/<%=user.id%>"> <button type="button" class="btn btn-success">update</button></a>
        <a href="/api/users/deleteUser/<%=user.id%>"> <button type="button" class="btn btn-danger">Delete</button></a>
    </td>
</tr>
<% }); %>
</table>
<a href="/api/users/addUser">
    <button  type="button" class="btn btnAdd btn-primary btn-lg" >Add</button>
</a>
</body>
</html>